@model ExamenP1JoseSanchez.Models.Carrera

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Carrera</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreCarrera" class="control-label"></label>
                <input asp-for="NombreCarrera" class="form-control" />
                <span asp-validation-for="NombreCarrera" class="text-danger"></span>
            </div>
            <div class="form-group">
                

                <label form="OptionCampus">Seleccion un Campus: </label>
                <div class="form-group">
                    <select id="Campus" name="Campus">
                        <option value="UDLA PARK">UDLA PARK</option>
                        <option value="UDLA GRANADOS">UDLA GRANADOS</option>
                        <option value="UDLA COLON">UDLA COLON</option>
                    </select>


                </div>
            </div>
            <div class="form-group">
                <label asp-for="NumSemestre" class="control-label"></label>
                <input asp-for="NumSemestre" class="form-control" />
                <span asp-validation-for="NumSemestre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
